extends layout.pug

block content
  include ./partials/inAppNav.pug
  h1.mt-2 Stocks
  .table-responsive
      table.table
        caption.d-md-none Scroll right to see all columns -&#62;
          thead
            tr
              th(scope='col') Name
              th(scope='col') Symbol
              th(scope='col') LastPrice
              th(scope='col') Change
              th(scope='col') High
              th(scope='col') Low
              th(scope='col') Open
              th(scope='col') By
              th(scope='col') Search Time
              th(scope='col')
          tbody
            each company in stocks
              tr
                td(scope='row')= company.Name
                td(scope='row')= company.Symbol
                td(scope='row')= company.LastPrice
                td(scope='row')= company.Change
                td(scope='row')= company.High
                td(scope='row')= company.Low
                td(scope='row')= company.Open
                td(scope='row')= company.user.Name
                td(scope='row')= company.DateCreated
                td(scope='row') 
                  form(method='POST' action='./history/'+company.Symbol+'/'+company.LastPrice+"?_method=DELETE")
                    button.btn.btn-default.btn-md.bg-danger.text-white.font-weight-bold(type='submit')
                      | Delete
